{
    "name": "fider",
    "version": "0.0.0",
    "repository": "https://github.com/getfider/fider",
    "private": true,
    "dependencies": {
        "@lingui/format-json": "^5.1.2",
        "@lingui/react": "^5.1.2",
        "dompurify": "^3.3.1",
        "marked": "^17.0.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-toastify": "^11.0.5",
        "slate": "^0.110.2",
        "slate-history": "^0.110.3",
        "slate-react": "^0.111.0"
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/plugin-transform-class-properties": "^7.27.1",
        "@babel/preset-env": "^7.28.5",
        "@babel/preset-react": "^7.28.5",
        "@babel/preset-typescript": "^7.28.5",
        "@cucumber/cucumber": "^11.3.0",
        "@lingui/babel-plugin-lingui-macro": "^5.1.2",
        "@lingui/cli": "^5.1.2",
        "@lingui/loader": "^5.1.2",
        "@lingui/macro": "^5.1.2",
        "@lingui/vite-plugin": "^5.6.1",
        "@playwright/test": "^1.57.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.0.1",
        "@types/debug": "^4.1.12",
        "@types/dompurify": "^3.0.5",
        "@types/jsdom": "^27.0.0",
        "@types/node": "^24.10.2",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@typescript-eslint/eslint-plugin": "5.22.0",
        "@typescript-eslint/parser": "5.22.0",
        "@vitejs/plugin-react": "^5.1.2",
        "autoprefixer": "^10.4.22",
        "babel-jest": "28.1.0",
        "babel-plugin-macros": "3.1.0",
        "esbuild": "^0.27.1",
        "esbuild-plugin-babel": "0.2.3",
        "eslint": "8.15.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "jest": "28.1.0",
        "jest-environment-jsdom": "28.1.0",
        "prettier": "^3.7.4",
        "sass": "^1.95.1",
        "typescript": "^5.9.3",
        "vite": "^7.2.7"
    },
    "browserslist": ">1%, not dead",
    "jest": {
        "testEnvironment": "jsdom",
        "transform": {
            ".+\\.(tsx|ts)?$": "babel-jest"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/public/jest.setup.tsx"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx|js|jsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "moduleNameMapper": {
            ".*\\.(png|scss|svg)$": "<rootDir>/public/jest.assets.ts",
            "@fider/(.*)": "<rootDir>/public/$1",
            "@locale/(.*)": "<rootDir>/locale/$1"
        }
    },
    "engines": {
        "npm": "10.x",
        "node": "21.x || 22.x || 23.x"
    },
    "scripts": {
        "dev": "vite",
        "build": "npm run build:sprites && vite build",
        "build:sprites": "node scripts/build-sprites.js",
        "preview": "vite preview",
        "heroku-postbuild": "make build-ssr && npm run build"
    }
}
